    <Label layoutX="25.0" layoutY="45.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Bachelor of Information Technology" textFill="#309adc" underline="true" />
    <Label layoutX="25.0" layoutY="70.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Units" textFill="#309adc" />
    <Label fx:id="welcomeLabel" layoutX="25.0" layoutY="110.0" style="-fx-font-size: 18px;" text="Welcome!" />


    <!-- Unused BorderPane removed or left as a placeholder if needed -->
    <!-- <BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" /> -->

    <!-- Navigation Menu -->
    <HBox layoutX="389.0" layoutY="20.0" spacing="10">
        <Button text="Home" onAction="#handleHome" styleClass="nav-button"/>
        <Button text="Edit Units" onAction="#goToEditUnit" styleClass="nav-button"/>
        <Button text="All Units" onAction="#goToAllUnits" styleClass="nav-button"/>
        <Button text="Predict Grade" onAction="#goToPredictGrade" styleClass="nav-button"/>
