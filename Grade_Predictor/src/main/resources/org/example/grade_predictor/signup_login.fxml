<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.grade_predictor.controller.SignupLoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Signup/Login" style="-fx-font-size: 24px;"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <TextField fx:id="firstNameField" promptText="First Name" visible="false"/>
    <TextField fx:id="lastNameField" promptText="Last Name" visible="false"/>
    <TextField fx:id="phoneField" promptText="Phone Number" visible="false"/>
    
    <VBox fx:id="enrollmentSection" spacing="10.0" visible="false">
        <Label text="Enrollment Information" style="-fx-font-size: 16px;"/>
        <Label fx:id="enrollmentHelperText" text="Enter a degree ID to automatically populate the degree name." 
               style="-fx-font-size: 12px; -fx-text-fill: #555555;" visible="false"/>
        <HBox spacing="10.0">
            <TextField fx:id="degreeIdField" promptText="Degree ID" prefWidth="150" onKeyReleased="#handleDegreeIdChanged"/>
            <TextField fx:id="degreeNameField" promptText="Degree Name" prefWidth="300"/>
        </HBox>
    </VBox>
    
    <Button text="Sign Up" onAction="#handleSignUp"/>
    <Button text="Log In" onAction="#handleLogIn"/>
</VBox>
