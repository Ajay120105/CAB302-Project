<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" stylesheets="@style.css"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.grade_predictor.controller.AllUnitsController">

    <!-- Application Header -->
    <Label layoutX="25.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;"
           text="Grade Predictor" underline="true" />
    <Label layoutX="25.0" layoutY="45.0" style="-fx-font-size: 18px; -fx-font-weight: bold;"
           text="Bachelor of Information Technology" underline="true" />
    <Label layoutX="25.0" layoutY="70.0" style="-fx-font-size: 14px; -fx-font-weight: bold;"
           text="Units" />
    <Label fx:id="welcomeLabel" layoutX="25.0" layoutY="110.0"
           style="-fx-font-size: 18px;" text="Welcome!" />

    <!-- Navigation Menu (matching the Edit Unit page) -->
    <MenuBar layoutX="323.0" layoutY="18.0" prefHeight="28.0" prefWidth="522.0">
        <Menu text="Home">
            <MenuItem onAction="#handleHome" text="Home"/>
        </Menu>
        <Menu text="Edit Units">
            <MenuItem onAction="#handleEditUnit" text="Edit Units"/>
        </Menu>
        <Menu text="All Units">
            <MenuItem onAction="#handleAllUnits" text="All Units"/>
        </Menu>
        <Menu text="Predict Grade">
            <MenuItem onAction="#goToPredictGrade" text="Predict Grade"/>
        </Menu>
        <Menu text="Profile">
            <MenuItem onAction="#handleProfile" text="Profile"/>
        </Menu>
        <Menu text="Settings">
            <MenuItem onAction="#handleSettings" text="Settings" />
        </Menu>
        <Menu text="Log Out">
            <MenuItem onAction="#handleLogout" text="Log Out"/>
        </Menu>
    </MenuBar>

    <!-- VBox for dynamically inserted unit rows (consistent with Edit Unit page) -->
    <VBox fx:id="unitsVBox" layoutX="25.0" layoutY="140.0" spacing="20.0">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
    </VBox>
</AnchorPane>
