<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<AnchorPane prefHeight="650.0" prefWidth="1000.0" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.grade_predictor.controller.AllUnitsController">

    <!-- Application Header -->
    <Label layoutX="25.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;"
           text="Grade Predictor" underline="true" />
    <Label layoutX="25.0" layoutY="45.0" style="-fx-font-size: 18px; -fx-font-weight: bold;"
           text="Bachelor of Information Technology" underline="true" />
    <Label layoutX="25.0" layoutY="70.0" style="-fx-font-size: 14px; -fx-font-weight: bold;"
           text="Units" />
    <Label fx:id="welcomeLabel" layoutX="25.0" layoutY="110.0"
           style="-fx-font-size: 18px;" text="Welcome!" />

    <!-- Navigation Menu (matching the Edit Unit page) -->
    <HBox layoutX="389.0" layoutY="20.0" spacing="10">
        <Button text="Home" onAction="#handleHome" styleClass="nav-button"/>
        <Button text="Edit Units" onAction="#goToEditUnit" styleClass="nav-button"/>
        <Button text="All Units" onAction="#goToAllUnits" styleClass="nav-button"/>
        <Button text="Predict Grade" onAction="#goToPredictGrade" styleClass="nav-button"/>
        <Button text="Profile" onAction="#handleProfile" styleClass="nav-button"/>
        <Button text="Settings" onAction="#handleSettings" styleClass="nav-button"/>
        <Button text="Log Out" onAction="#handleLogout" styleClass="nav-button"/>
    </HBox>


    <!-- VBox for dynamically inserted unit rows (consistent with Edit Unit page) -->
    <VBox fx:id="unitsVBox" layoutX="25.0" layoutY="140.0" spacing="20.0">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
    </VBox>
</AnchorPane>
