    <!-- Units Section Layer -->
    <VBox layoutX="8.0" layoutY="134.0" prefHeight="497.0" prefWidth="966.0" spacing="10" style="-fx-background-color: #E0E0E0; -fx-padding: 20; -fx-border-radius: 10; -fx-border-color: #CCCCCC;">
