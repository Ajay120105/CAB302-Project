<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.grade_predictor.controller.ProfileController"
            prefHeight="650.0" prefWidth="1000.0" stylesheets="@style.css">

    <!-- Application Header -->
    <Label layoutX="25.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;"
           text="Grade Predictor" underline="true"/>
    <Label layoutX="25.0" layoutY="45.0" style="-fx-font-size: 18px; -fx-font-weight: bold;"
           text="Bachelor of Information Technology" underline="true"/>
    <Label layoutX="25.0" layoutY="70.0" style="-fx-font-size: 14px; -fx-font-weight: bold;"
           text="Units"/>
    <Label fx:id="welcomeLabel" layoutX="25.0" layoutY="110.0"
           style="-fx-font-size: 18px;" text="Welcome!"/>

    <!-- Navigation Bar -->
    <MenuBar layoutX="323.0" layoutY="18.0" prefHeight="28.0" prefWidth="522.0">
        <Menu text="Home"><MenuItem onAction="#handleHome" text="Home"/></Menu>
        <Menu text="Edit Units"><MenuItem onAction="#goToEditUnit" text="Edit Units"/></Menu>
        <Menu text="All Units"><MenuItem onAction="#goToAllUnits" text="All Units"/></Menu>
        <Menu text="Predict Grade"><MenuItem onAction="#goToPredictGrade" text="Predict Grade"/></Menu>
        <Menu text="Profile"><MenuItem onAction="#handleProfile" text="Profile"/></Menu>
        <Menu text="Settings"><MenuItem onAction="#handleSettings" text="Settings"/></Menu>
        <Menu text="Log Out"><MenuItem onAction="#handleLogout" text="Log Out"/></Menu>
    </MenuBar>

    <!-- Profile Details Section -->
    <VBox layoutX="25.0" layoutY="140.0" spacing="20">
        <Label text="User Profile" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <Label text="First Name:"/>
        <TextField fx:id="firstNameField"/>

        <Label text="Last Name:"/>
        <TextField fx:id="lastNameField"/>

        <Label text="Email:"/>
        <TextField fx:id="emailField"/>

        <Label text="Phone:"/>
        <TextField fx:id="phoneField"/>

        <!-- Save Changes Button -->
        <Button fx:id="saveButton" text="Save Changes" onAction="#handleSaveChanges"/>
    </VBox>
</AnchorPane>

