<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.SubScene?>
<AnchorPane prefHeight="650.0" prefWidth="1000.0" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.grade_predictor.controller.PredictGradeController">
    <SubScene fill="#185e8a" height="200.0" layoutX="21.0" layoutY="90.0" width="958.0">
        <root>
            <Region />
        </root>
    </SubScene>
    <!-- App name and Label at the top left -->
    <Label layoutX="25.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Grade Predictor" textFill="#309adc" underline="true" />
    <Label layoutX="25.0" layoutY="45.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Bachelor of Information Technology" textFill="#309adc" underline="true" />
    <Label layoutX="25.0" layoutY="70.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Units" textFill="#309adc" />
    <Label fx:id="welcomeLabel" layoutX="25.0" layoutY="110.0" style="-fx-font-size: 18px;" text="Welcome!" />

    <!-- Unused BorderPane removed or left as a placeholder if needed -->
    <BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" />

    <!-- Dynamic container for units -->
    <VBox fx:id="unitsVBox" layoutX="25.0" layoutY="140.0" spacing="20" />

    <!-- Navigation Menu -->
    <MenuBar layoutX="389.0" layoutY="20.0" prefHeight="28.0" prefWidth="522.0">
        <Menu text="Home">
            <MenuItem onAction="#handleHome" text="Home" />
        </Menu>
        <Menu text="Edit Units">
            <MenuItem onAction="#goToEditUnit" text="Edit Units" />
        </Menu>
        <Menu text="All Units">
            <MenuItem onAction="#goToAllUnits" text="All Units" />
        </Menu>
        <Menu text="Predict Grade">
            <MenuItem onAction="#goToPredictGrade" text="Predict Grade" />
        </Menu>
        <Menu text="Profile">
            <MenuItem onAction="#handleProfile" text="Profile" />
        </Menu>
        <Menu text="Settings">
            <MenuItem onAction="#handleSettings" text="Settings" />
        </Menu>
        <Menu text="Log Out">
            <MenuItem onAction="#handleLogout" text="Log Out" />
        </Menu>
    </MenuBar>

    <!-- Optional Edit Button remains if needed -->
    <Button fx:id="goToEditUnit" layoutX="872.0" layoutY="169.0" mnemonicParsing="false" onAction="#goToEditUnit" text="EDIT" />

    <!-- The right-hand side UI elements remain unchanged -->
    <SubScene fill="#155983" height="279.0" layoutX="462.0" layoutY="332.0" width="428.0">
        <root>
            <Region />
        </root>
    </SubScene>
    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="279.0" layoutX="499.0" layoutY="333.0" stroke="BLACK" strokeType="INSIDE" width="413.0" />
    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="WHITE" height="279.0" layoutX="42.0" layoutY="333.0" stroke="BLACK" strokeType="INSIDE" width="413.0" />
    <Circle fill="WHITE" layoutX="706.0" layoutY="472.0" radius="100.0" stroke="BLACK" strokeType="INSIDE" />
    <TextField layoutX="674.0" layoutY="458.0" prefHeight="26.0" prefWidth="62.0" text="6.2 GPA" />
    <TextField alignment="CENTER" layoutX="85.0" layoutY="372.0" prefHeight="54.0" prefWidth="326.0" text="Weekly Average Study Hours" />
    <TextField alignment="CENTER" layoutX="85.0" layoutY="457.0" prefHeight="54.0" prefWidth="326.0" text="Study Efficiency (1-10)" />
    <Button fx:id="predictButton" layoutX="162.0" layoutY="553.0" mnemonicParsing="false" onAction="#handlePredictGrade" prefHeight="37.0" prefWidth="172.0" text="Predict Grade" />
</AnchorPane>
