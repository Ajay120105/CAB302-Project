<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainLayout" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.grade_predictor.controller.components.EditableEnrolledUnitItemController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <HBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Unit Code:" style="-fx-font-weight: bold;"/>
        <Label fx:id="unitCodeLabel" text="CODE123" />
    </HBox>

    <HBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Year:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="yearField" prefWidth="80" />
    </HBox>

    <HBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Semester:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="semesterField" prefWidth="80" />
    </HBox>

    <HBox spacing="5" alignment="CENTER_LEFT">
        <Label text="Weekly Hours:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="hoursField" prefWidth="80" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="saveButton" text="Save" style="-fx-text-fill: green;" onAction="#handleSave"/>
        <Button fx:id="deleteButton" text="Delete" style="-fx-text-fill: red;" onAction="#handleDelete"/>
    </HBox>

</VBox> 