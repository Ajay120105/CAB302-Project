<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.grade_predictor.controller.SignupLoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Signup/Login" style="-fx-font-size: 24px;"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <TextField fx:id="firstNameField" promptText="First Name" visible="false"/>
    <TextField fx:id="lastNameField" promptText="Last Name" visible="false"/>
    <TextField fx:id="phoneField" promptText="Phone Number" visible="false"/>
    <Button text="Sign Up" onAction="#handleSignUp"/>
    <Button text="Log In" onAction="#handleLogIn"/>
</VBox>
